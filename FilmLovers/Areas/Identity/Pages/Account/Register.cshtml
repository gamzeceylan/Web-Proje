@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <br />
        <h3 class="text-light">Kayıt Ol</h3>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <hr class="bg-light"/>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Ad" class="text-light"></label>
                <input asp-for="Input.Ad" class="form-control" />
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Soyad" class="text-light"></label>
                <input asp-for="Input.Soyad" class="form-control" />
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.DogumTarihi" class="text-light"></label>
                <input asp-for="Input.DogumTarihi" class="form-control" />
                <span asp-validation-for="Input.DogumTarihi" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Input.Email" class="text-light"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="text-light"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="text-light"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-3 col-md-offset-2">
       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
