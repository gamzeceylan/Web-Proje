        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiziAd)
        </dd>
        <dt class="col-sm-2">
           Yıl
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Yil)
        </dd>
        <dt class="col-sm-2">
