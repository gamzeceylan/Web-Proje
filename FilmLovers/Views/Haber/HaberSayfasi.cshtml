@model IEnumerable<FilmLovers.Models.Haber>
    @{ ViewData["Title"] = "Index"; }

    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="popular__product">
                        <div class="row">
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                <div class="section-title">
                                    <h4>SİNEMADAN HABERLER</h4>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            @foreach (var item in Model)
                            {

                                <div class="col-lg-4 col-md-6 col-sm-6">
                                    <div class="product__item">
                                        <div class="product__item__pic set-bg">
                                            <img src="..\@item.Resim" alt="Alternate Text" />
                                            <div class="product__item__text">

                                                <h5><a asp-action="IcerikSayfasi"  asp-route-id="@item.Id">@item.Baslik</a></h5>
                                            </div>
                                        </div>
                                       
                                    </div>
                                </div>
                            }


                        </div>
                       
                    </div>

                </div>

            </div>
        </div>

    </section>
