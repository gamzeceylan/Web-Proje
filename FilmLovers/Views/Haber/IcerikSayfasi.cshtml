@model IEnumerable<FilmLovers.Models.Haber>
@{ ViewData["Title"] = "Index"; }

<!-- Anime Section Begin -->
@foreach (var item in Model)
{


<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg">
                        <img src="..\@item.Resim" alt="Alternate Text" />
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>@item.Baslik</h3>

                        </div>

                        <p>
                            @item.Icerik
                        </p>
                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <ul>
                                  
                                        <li><span>Yazar: </span> @item.Yazar.Ad @item.Yazar.Soyad</li>

                                    </ul>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</section>}