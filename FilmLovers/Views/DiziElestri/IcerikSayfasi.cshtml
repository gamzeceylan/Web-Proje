@model IEnumerable<FilmLovers.Models.DiziElestri>
@{ ViewData["Title"] = "IcerikSayfasi"; }

<!-- Anime Section Begin -->
@foreach (var item in Model)
{
              <section class="anime-details spad">
                    <div class="container">
                        <div class="anime__details__content">
                            <div class="row">
                         
                       
                                            <img class="product__item__pic set-bg" src="..\..\@item.Dizi.Resim" alt="Alternate Text" />
                                
                            
                                <div class="col-lg-9">
                                    <div class="anime__details__text">
                                        <div class="anime__details__title">
                                            <h3>

                                                @item.Dizi.DiziAd

                                            </h3>

                                        </div>
                                       
                                        <p>
                                            @item.Yazi
                                        </p>
                                        <div class="anime__details__widget">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-6">
                                                    <ul>
                                                        <li><span>@SharedLocalizer["Yıl"]: </span> @item.Dizi.Yil</li>
                                                        <li><span>@SharedLocalizer["Konu"]: </span> @item.Dizi.Konu</li>
                                                        <li><span>@SharedLocalizer["Oyuncular"]: </span>@item.Dizi.Oyuncular</li>
                                                        <li><span>@SharedLocalizer["Dil"]: </span> @item.Dizi.Dil</li>
                                                        <li><span>@SharedLocalizer["Sezon sayisi"]: </span>@item.Dizi.SezonSayisi</li>
                                                        <li><span>@SharedLocalizer["Toplam bolum sayısı"]: </span> @item.Dizi.ToplamBolumSayisi</li>
                                                        <li><span>@SharedLocalizer["elestri yazari"]: </span> @item.Yazar.Ad</li>
                                                        <li><span>@SharedLocalizer["Puan"]: </span> @item.YazarPuan</li>
                                                    </ul>
                                                </div>
               
                                            </div>
                                        </div>
                                    
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </section>
}