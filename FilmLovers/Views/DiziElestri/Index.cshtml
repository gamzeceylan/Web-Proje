@model IEnumerable<FilmLovers.Models.DiziElestri>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>@SharedLocalizer["Dizi Elestrileri"]</h1>

<p>
    <button type="button" class="btn btn-outline-danger">
        <a asp-action="Create" class="text-dark">@SharedLocalizer["Olustur"]</a>
    </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Dizi
            </th>
            <th>
                Yazar
            </th>
            <th>
                Yazı
            </th>
            <th>
                Yazar Puanı
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dizi.DiziAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yazar.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yazi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YazarPuan)
                </td>
                <td>
                    <button type="button" class="btn btn-outline-danger">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-dark">@SharedLocalizer["Duzenle"]</a>
                    </button>

                    <button type="button" class="btn btn-outline-danger">
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-dark">@SharedLocalizer["Detaylar"]</a>
                    </button>

                    <button type="button" class="btn btn-outline-danger">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-dark">@SharedLocalizer["Sil"]</a>
                    </button>

                </td>
            </tr>
        }
    </tbody>
</table>
