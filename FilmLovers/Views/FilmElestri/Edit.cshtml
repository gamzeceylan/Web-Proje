                <label asp-for="Yazi" class="control-label">Yazı</label>
                <input asp-for="Yazi" class="form-control" />
                <span asp-validation-for="Yazi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YazarPuan" class="control-label">Yazar Puanı</label>
                <input asp-for="YazarPuan" class="form-control" />
                <span asp-validation-for="YazarPuan" class="text-danger"></span>
