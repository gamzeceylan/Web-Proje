@model IEnumerable<FilmLovers.Models.FilmElestri>
@{ ViewData["Title"] = "Index"; }

<!-- Anime Section Begin -->
@foreach (var item in Model)
{
<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg">
                        <div class="anime__details__pic set-bg">

                            <img class="product__item__pic set-bg" src="@item.Film.Afis" alt="Alternate Text" />
                            <div class="comment"><i class="fa fa-comments"></i> 11</div>
                            <div class="view"><i class="fa fa-eye"></i> 9141</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>

                                @item.Film.FilmAd

                            </h3>

                        </div>

                        <p>
                            @item.Yazi
                        </p>
                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-12 col-md-6">
                                    <ul>
                                        <li><span>Yıl: </span> @item.Film.Yil</li>
                    
                                        <li><span>Konu: </span> @item.Film.Konu</li>
                                        <li><span>Oyuncular: </span>@item.Film.Oyuncular</li>
                                        <li><span>Dil: </span> @item.Film.Dil</li>
                                        <li><span>Süre: </span>@item.Film.Uzunluk</li>
                                        <br /><br /><br />
                                        <li><span>Eleştiri Yazarı: </span> @item.Yazar.Ad  @item.Yazar.Soyad</li>
                                        <li><span>Yazar Puanı: </span> @item.YazarPuan</li>
                                    </ul>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</section>}