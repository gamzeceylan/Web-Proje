@model IEnumerable<FilmLovers.Models.Roportaj>
@{
    ViewData["Title"] = "Index";
}


@foreach (var item in Model)
{


<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div lass="col-md-2"></div>


                <div class="col-lg-12 col-md-8">
                    <img src="..\..\@item.Resim" style="width:700px" class="mx-auto d-block" alt="Alternate Text " />
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <br />
                            <h3 class="text-center">@item.Baslik</h3>

                        </div>

                        <p>
                            @item.Yazi
                        </p>
                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <ul>
                                        <li><span>Konuşmacı: </span>@item.Konusmaci</li>
                                        <li><span>Konu: </span> @item.Konu</li>
                                        <li><span>Yazar: </span> @item.Yazar.Ad</li>

                                    </ul>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
                <div lass="col-md-2"></div>
            </div>
        </div>
        
    </div>
</section>
}