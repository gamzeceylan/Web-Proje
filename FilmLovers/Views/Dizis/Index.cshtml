@model IEnumerable<FilmLovers.Models.Dizi>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="datatablesSimple">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiziAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Konu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YazarPuan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oyuncular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yazar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DiziAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Konu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YazarPuan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Oyuncular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dil.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yazar.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
